@model GrapheneTrace.Models.AdminHomeViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4"> <h1>@ViewData["Title"]</h1>
    <hr /> <div class="mb-4"> <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-primary btn-lg">Create New User</a>
    </div>

    @if (Model.Users != null && Model.Users.Any())
    {
        <h2>Manage Users</h2>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-info">Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found. <a asp-controller="Admin" asp-action="CreateUser">Create the first user</a>.</p>
    }
</div>